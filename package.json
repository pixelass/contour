{
  "name": "contour",
  "version": "0.0.0",
  "private": true,
  "description": "A lightweight but very advanced grid-system library.",
  "repository": "git@github.com:pixelass/contour.git",
  "license": "MIT",
  "author": "Gregor Adams <greg@pixelass.com>",
  "main": "n.a.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prebuild": "yarn setup --build && lerna run clean",
    "build": "lerna run build",
    "build-storybook": "npx cross-env NODE_ENV=production build-storybook -c .storybook -o public --quiet",
    "build-storybook:local": "build-storybook -c .storybook -o public --quiet",
    "clean": "lerna run clean",
    "clean:gh-pages": "rimraf node_modules/gh-pages/.cache node_modules/.cache/gh-pages",
    "dev": "start-storybook",
    "lint": "yarn tsc:noEmit && yarn xo && yarn stylelint",
    "ncu:major": "npx npm-check-updates@11.8.3",
    "ncu:minor": "npx npm-check-updates@11.8.3 -t minor",
    "ncu:patch": "npx npm-check-updates@11.8.3 -t patch",
    "predeploy": "yarn clean:gh-pages && yarn build-storybook",
    "prepare": "husky install && yarn setup",
    "prepublishOnly": "yarn build",
    "prerelease": "yarn build",
    "release": "lerna publish --conventional-commits",
    "prerelease:beta": "yarn build",
    "release:beta": "lerna publish --canary --preid beta --pre-dist-tag beta",
    "prerelease:rc": "yarn build",
    "release:rc": "lerna publish --canary --preid rc --pre-dist-tag next",
    "serve:storybook": "npx serve@12.0.0 ./public",
    "setup": "babel-node prepare/init.ts -x '.ts'",
    "spj": "npx sort-package-json@1.48 package.json \"packages/*/*/package.json\"",
    "stylelint": "stylelint 'packages/**/*.{ts,tsx}'",
    "tsc:noEmit": "tsc --noEmit",
    "unimported": "npx unimported@1.13.0",
    "watch": "lerna run watch",
    "xo": "xo 'packages/**/*.{ts,tsx}'",
    "xo:fix": "yarn xo --fix"
  },
  "dependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@commitlint/config-lerna-scopes": "^15.0.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@emotion/cache": "^11.6.0",
    "@emotion/core": "^11.0.0",
    "@emotion/react": "^11.7.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.2.1",
    "@mui/material": "^5.2.3",
    "@percy/cli": "^1.0.0-beta.71",
    "@percy/storybook": "^4.1.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-docs": "^6.4.8",
    "@storybook/addon-essentials": "^6.4.8",
    "@storybook/react": "^6.4.8",
    "@storybook/theming": "^6.4.8",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@stylelint/prettier-config": "^2.0.0",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "babel-loader": "^8.2.3",
    "eslint": "^7.32.0",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-config-xo-typescript": "^0.44.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "12.1.2",
    "postcss-pseudo-classes": "^0.2.1",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.60.2",
    "stylelint": "^14.1.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-property-sort-order-smacss": "^8.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^5.0.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-node": "^10.4.0",
    "type-fest": "^2.8.0",
    "typescript": "^4.5.2",
    "webpack": "^5.65.0",
    "xo": "^0.47.0"
  },
  "devDependencies": {
    "@storybook/builder-webpack5": "^6.4.8",
    "@storybook/manager-webpack5": "^6.4.8"
  }
}
